{
  "extends": "@rcp/config-typescript/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "baseUrl": "src/",
    "paths": {
      "@rcp/react-common-preset/components/*": ["./js/components/*"],
      "@rcp/react-common-preset/constants/*": ["./js/constants/*"],
      "@rcp/react-common-preset/utils/*": ["./js/utils/*"],
      "@rcp/react-common-preset/types/*": ["./js/types/*"],
      "@rcp/react-common-preset/img/*": ["./assets/img/*"],
      "@rcp/react-common-preset/svg/*": ["./assets/svg/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
